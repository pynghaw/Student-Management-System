@model IEnumerable<WebApp1.Models.tb_batch>

@{
    ViewBag.Title = "Batch";
}

<h2>Batch</h2>

<p>
    @Html.ActionLink("Create New Batch", "Create", null, new { @class = "btn btn-primary my-2" })
</p>
<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.batch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.year)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.batch)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td class="align-middle">
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-dark ms-1" })
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-dark ms-1" })
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-dark ms-1" })
            </td>
        </tr>
    }

</table>

@model IEnumerable<WebApp1.Models.tb_course>

@{
    ViewBag.Title = "Course";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Create New Course", "Create", null, new { @class = "btn btn-primary my-2" })
</p>
<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.course)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.duration)
            </th>
            <th></th>
        </tr>
    </thead>
    
@foreach (var item in Model) {
    <tr>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.course)
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class = "btn btn-dark ms-1" })
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class = "btn btn-dark ms-1" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-dark ms-1" })
        </td>
    </tr>
}

</table>
